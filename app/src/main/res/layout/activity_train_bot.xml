<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainBot">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="131dp"
        android:orientation="vertical"
        android:theme="@style/Base.Theme.AppCompat.Light.Dialog.Alert">

        <android.support.design.widget.TextInputLayout

            android:layout_width="360dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/bot_default_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add Default Message"
                android:textColor="@color/colorPrimaryDark" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bot_default_button"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"

            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Add"
            android:textColor="@color/common_google_signin_btn_text_dark_default" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="315dp"
        android:layout_height="274dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="38dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="31dp"

        android:layout_marginBottom="35dp"
        android:orientation="vertical"
        android:theme="@style/Base.Theme.AppCompat.Light.Dialog.Alert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.726">

        <android.support.design.widget.TextInputLayout

            android:layout_width="360dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.273">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/bot_keys_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add keys"
                android:textColor="@color/colorPrimaryDark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="376dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:textColorHint="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.498">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/bot_messages_input"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:hint="Add response message"
                android:textColor="@color/common_google_signin_btn_text_dark_default" />


        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/bot_add_button"
            android:layout_width="326dp"
            android:layout_height="38dp"

            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:text="Add"
            android:textColor="@color/common_google_signin_btn_text_dark_default"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</RelativeLayout>
